{
  // Global:

  "editor.minimap.enabled": false, // Disables the minimap in the editor.
  "editor.formatOnSave": true, // Formats the code automatically on save.
  "explorer.confirmDelete": false, // Bypasses confirmation when deleting files in the explorer.
  "workbench.startupEditor": "none", // Opens no editors on startup

  // Editor:

  "editor.defaultFormatter": "esbenp.prettier-vscode", // Sets Prettier as the default formatter for all languages.
  "javascript.updateImportsOnFileMove.enabled": "always", // Automatically updates imports when moving JavaScript files.
  "typescript.updateImportsOnFileMove.enabled": "always", // Automatically updates imports when moving TypeScript files.
  "eslint.format.enable": true, // Enables ESLint formatting.
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // Language Specific:

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Sets Prettier as the default formatter for JSON files.
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Sets Prettier as the default formatter for JavaScript files.
  },

  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Sets Prettier as the default formatter for TypeScript/React files.
  },

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Sets Prettier as the default formatter for HTML files.
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Sets Prettier as the default formatter for CSS files.
  },

  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Sets Prettier as the default formatter for SCSS files.
  },

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Sets Prettier as the default formatter for TypeScript files.
  }
}
